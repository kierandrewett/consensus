<h2>Select One Candidate</h2>
<p>Mark your choice with an X in the box.</p>

<div class="candidates-fptp">
    <% candidates.forEach(candidate => { %>
        <label class="ballot-row" for="candidate-<%= candidate.candidateID %>">
            <input type="radio" id="candidate-<%= candidate.candidateID %>" name="candidateID" value="<%= candidate.candidateID %>" required autocomplete="off">
            <span class="ballot-box">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6L6 18M6 6l12 12"/>
                </svg>
            </span>
            <div class="ballot-candidate">
                <span class="ballot-name"><%= candidate.name %></span>
                <span class="ballot-party"><%= candidate.party %></span>
                <% if (candidate.biography) { %>
                    <p class="ballot-bio"><%= candidate.biography %></p>
                <% } %>
            </div>
        </label>
    <% }) %>
</div>
