<%- include('partials/header') %>

<div class="kiosk-container">
    <div class="kiosk-card" style="text-align: center; max-width: 500px;">
        <div class="kiosk-header">
            <div class="kiosk-icon" style="color: var(--muted);">
                <i data-lucide="search-x" style="width: 64px; height: 64px;"></i>
            </div>
            <h1 style="font-size: 4rem; margin-bottom: 0; color: var(--muted);">404</h1>
            <p style="font-size: 1.25rem; color: var(--text);">Page Not Found</p>
        </div>
        
        <div style="padding: 0 2rem;">
            <p style="color: var(--muted); margin-bottom: 1.5rem;">
                The page you're looking for doesn't exist or has been moved.
            </p>
        </div>
        
        <div style="padding: 1rem 2rem 2rem; display: flex; flex-direction: column; gap: 1rem;">
            <a href="/" class="kiosk-btn kiosk-btn-primary">
                <i data-lucide="home" style="width: 20px; height: 20px;"></i>
                Return Home
            </a>
            <button onclick="history.back()" class="kiosk-btn kiosk-btn-secondary">
                <i data-lucide="arrow-left" style="width: 20px; height: 20px;"></i>
                Go Back
            </button>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
