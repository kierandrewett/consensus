<%- include('partials/header') %>

<div class="kiosk-container">
    <div class="kiosk-card" style="text-align: center; max-width: 500px;">
        <div class="kiosk-header">
            <div class="kiosk-icon" style="color: var(--danger);">
                <i data-lucide="alert-circle" style="width: 64px; height: 64px;"></i>
            </div>
            <h1><%= title %></h1>
        </div>
        
        <div style="padding: 0 2rem;">
            <div class="alert alert-error" style="text-align: left;">
                <div style="display: flex; align-items: flex-start; gap: 0.75rem;">
                    <i data-lucide="x-circle" style="width: 20px; height: 20px; flex-shrink: 0; margin-top: 2px;"></i>
                    <p style="margin: 0;"><%= error %></p>
                </div>
            </div>
        </div>
        
        <div style="padding: 1.5rem 2rem 2rem; display: flex; flex-direction: column; gap: 1rem;">
            <a href="/" class="kiosk-btn kiosk-btn-primary">
                <i data-lucide="home" style="width: 20px; height: 20px;"></i>
                Return Home
            </a>
            <button onclick="history.back()" class="kiosk-btn kiosk-btn-secondary">
                <i data-lucide="arrow-left" style="width: 20px; height: 20px;"></i>
                Go Back
            </button>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
