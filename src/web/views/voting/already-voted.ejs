<%- include('../partials/header') %>

<div class="kiosk-container">
    <div class="kiosk-card" style="text-align: center; max-width: 500px;">
        <div class="kiosk-header">
            <div class="kiosk-icon" style="color: var(--info);">
                <i data-lucide="check-circle" style="width: 64px; height: 64px;"></i>
            </div>
            <h1>Already Voted</h1>
        </div>
        
        <div style="padding: 0 2rem;">
            <p style="color: var(--muted); margin-bottom: 1rem;">You have already cast your vote in this election.</p>
            <p style="font-weight: 500;"><%= election.name %></p>
        </div>
        
        <div style="padding: 1.5rem 2rem 2rem; display: flex; flex-direction: column; gap: 1rem;">
            <a href="/confirmations" class="kiosk-btn kiosk-btn-primary">
                <i data-lucide="file-check" style="width: 20px; height: 20px;"></i>
                View My Votes
            </a>
            <a href="/elections" class="kiosk-btn kiosk-btn-secondary">
                <i data-lucide="arrow-left" style="width: 20px; height: 20px;"></i>
                Back to Elections
            </a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
