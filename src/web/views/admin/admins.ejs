<%- include('../partials/header') %>

<div class="admin-dashboard">
    <%- include('../partials/admin-sidebar', { activePage: 'admins' }) %>
    
    <div class="admin-content">
        <div class="admin-header">
            <div class="admin-header-info">
                <h1>Manage Administrators</h1>
                <p>Create and manage admin accounts</p>
            </div>
            <button id="createAdminBtn" class="btn btn-primary">
                <i data-lucide="user-plus" style="width: 18px; height: 18px;"></i>
                Add Administrator
            </button>
        </div>
        
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem;">
            <i data-lucide="alert-circle" style="width: 20px; height: 20px;"></i>
            <span><%= error %></span>
        </div>
        <% } %>
        
        <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success" style="display: flex; align-items: flex-start; gap: 0.75rem; margin-bottom: 1rem; background: #dcfce7; border: 1px solid #22c55e; border-radius: 8px; padding: 1rem;">
            <i data-lucide="check-circle" style="width: 20px; height: 20px; color: #16a34a;"></i>
            <div style="color: #166534;">
                <strong>Administrator created successfully!</strong>
                <p style="margin: 0.5rem 0 0;">Share these credentials with the new administrator:</p>
                <div style="background: #f0fdf4; padding: 0.75rem; border-radius: 6px; margin-top: 0.5rem; font-family: monospace;">
                    <div><strong>Username:</strong> <%= newAdminUsername %></div>
                    <div><strong>Temporary Password:</strong> <code style="background: white; padding: 0.25rem 0.5rem; border-radius: 4px;"><%= newAdminPassword %></code></div>
                </div>
                <p style="margin: 0.5rem 0 0; font-size: 0.875rem;"><i data-lucide="info" style="width: 14px; height: 14px; display: inline; vertical-align: middle;"></i> They will be required to set a new password on first login.</p>
            </div>
        </div>
        <% } %>
        
        <div class="admin-section">
            <% if (admins.length === 0) { %>
                <div class="empty-state">
                    <i data-lucide="shield" style="width: 48px; height: 48px; margin-bottom: 1rem;"></i>
                    <p>No administrators found.</p>
                </div>
            <% } else { %>
                <div class="admins-filters">
                    <div class="filter-search">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></svg>
                        <input type="text" id="adminSearch" placeholder="Search administrators...">
                    </div>
                </div>
                
                <div class="table-container">
                    <table class="admin-table" id="adminsTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% admins.forEach(admin => { 
                                const canDelete = admin.adminID !== currentAdminID && 
                                    typeof currentAdminCreatedAt !== 'undefined' && 
                                    new Date(admin.createdAt) > new Date(currentAdminCreatedAt);
                            %>
                                <tr>
                                    <td>
                                        <strong><%= admin.name %></strong>
                                        <% if (admin.adminID === currentAdminID) { %>
                                            <span class="badge" style="margin-left: 0.5rem; background: var(--brand); color: white;">You</span>
                                        <% } %>
                                    </td>
                                    <td><code><%= admin.username %></code></td>
                                    <td><%= new Date(admin.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <% if (canDelete) { %>
                                            <form method="POST" action="/admin/admins/<%= admin.adminID %>/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this administrator?');">
                                                <button type="submit" class="btn-icon" title="Delete Admin">
                                                    <i data-lucide="trash-2" style="width: 18px; height: 18px;"></i>
                                                </button>
                                            </form>
                                        <% } else if (admin.adminID !== currentAdminID) { %>
                                            <span style="color: var(--muted); font-size: 0.75rem;" title="Cannot delete admins created before your account">
                                                <i data-lucide="lock" style="width: 14px; height: 14px;"></i>
                                            </span>
                                        <% } else { %>
                                            <span style="color: var(--muted); font-size: 0.875rem;">â€”</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script src="/public/js/admin.js"></script>

<!-- Create Admin Modal -->
<div id="createAdminModal" class="modal-overlay" hidden>
    <div class="modal-content" style="max-width: 500px;">
        <div class="modal-header" style="display: flex; align-items: center; justify-content: space-between; padding: 1.5rem; border-bottom: 1px solid var(--border);">
            <h2 style="margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                <i data-lucide="user-plus" style="width: 24px; height: 24px;"></i>
                Add Administrator
            </h2>
            <button type="button" id="closeAdminModalBtn" class="btn-icon" style="background: none; border: none; cursor: pointer;">
                <i data-lucide="x" style="width: 24px; height: 24px;"></i>
            </button>
        </div>
        <form method="POST" action="/admin/admins" id="createAdminForm">
            <div class="modal-body" style="padding: 1.5rem;">
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label for="adminName" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Full Name *</label>
                    <input type="text" id="adminName" name="name" required class="form-input" placeholder="e.g., John Smith" style="width: 100%; padding: 0.75rem; border: 1px solid var(--border); border-radius: 6px;">
                </div>
                
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label for="adminUsername" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Username *</label>
                    <input type="text" id="adminUsername" name="username" required class="form-input" placeholder="e.g., jsmith" minlength="3" style="width: 100%; padding: 0.75rem; border: 1px solid var(--border); border-radius: 6px;">
                    <small style="color: var(--muted); margin-top: 0.25rem; display: block;">Minimum 3 characters, will be converted to lowercase</small>
                </div>
                
                <div class="alert alert-info" style="display: flex; align-items: flex-start; gap: 0.75rem; background: #e0f2fe; border: 1px solid #0ea5e9; border-radius: 8px; padding: 1rem;">
                    <i data-lucide="info" style="width: 20px; height: 20px; color: #0369a1;"></i>
                    <div style="color: #0369a1;">
                        <strong>Note:</strong> A temporary password will be generated. The new administrator will be required to set their own password on first login.
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="padding: 1rem 1.5rem; border-top: 1px solid var(--border); display: flex; justify-content: flex-end; gap: 0.75rem;">
                <button type="button" id="cancelAdminModalBtn" class="btn btn-secondary">Cancel</button>
                <button type="submit" class="btn btn-primary">
                    <i data-lucide="plus" style="width: 16px; height: 16px; margin-right: 0.25rem;"></i>
                    Create Administrator
                </button>
            </div>
        </form>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('createAdminModal');
    const openBtn = document.getElementById('createAdminBtn');
    const closeBtn = document.getElementById('closeAdminModalBtn');
    const cancelBtn = document.getElementById('cancelAdminModalBtn');

    if (!modal) return;

    openBtn?.addEventListener('click', () => {
        modal.hidden = false;
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    });

    const closeModal = () => {
        modal.hidden = true;
    };

    closeBtn?.addEventListener('click', closeModal);
    cancelBtn?.addEventListener('click', closeModal);

    modal.addEventListener('click', (e) => {
        if (e.target === modal) {
            closeModal();
        }
    });

    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !modal.hidden) {
            closeModal();
        }
    });
    
    // Admin search
    const searchInput = document.getElementById('adminSearch');
    const table = document.getElementById('adminsTable');
    
    if (searchInput && table) {
        const rows = table.querySelectorAll('tbody tr');
        
        searchInput.addEventListener('input', () => {
            const term = searchInput.value.toLowerCase();
            
            rows.forEach(row => {
                const text = row.textContent?.toLowerCase() || '';
                row.style.display = text.includes(term) ? '' : 'none';
            });
        });
    }
});
</script>

<%- include('../partials/footer') %>
