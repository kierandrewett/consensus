<%- include('../partials/header') %>
<%- include('../partials/election-type-helper') %>

<div class="admin-dashboard">
    <%- include('../partials/admin-sidebar', { activePage: 'elections' }) %>
    
    <div class="admin-content">
        <div class="admin-header">
            <div class="admin-header-info">
                <h1>Manage Elections</h1>
                <p>View and manage all elections in the system</p>
            </div>
            <button type="button" class="btn btn-primary" id="createElectionBtn">
                <i data-lucide="plus" style="width: 18px; height: 18px; margin-right: 0.5rem;"></i>
                Create Election
            </button>
        </div>
        
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem;">
            <i data-lucide="alert-circle" style="width: 20px; height: 20px;"></i>
            <span><%= error %></span>
        </div>
        <% } %>
        
        <% 
            const draftElections = elections.filter(e => e.status === 'DRAFT');
            const activeElections = elections.filter(e => e.status === 'ACTIVE');
            const closedElections = elections.filter(e => e.status === 'CLOSED');
        %>
        
        <div class="admin-section">
            <% if (elections.length === 0) { %>
                <div class="empty-state">
                    <i data-lucide="inbox" style="width: 48px; height: 48px; margin-bottom: 1rem;"></i>
                    <p>No elections found. Create your first election to get started.</p>
                </div>
            <% } else { %>
                <div class="elections-filters">
                    <div class="filter-tabs">
                        <button class="filter-tab active" data-filter="all">All <span class="filter-count"><%= elections.length %></span></button>
                        <button class="filter-tab" data-filter="draft">Draft <span class="filter-count"><%= draftElections.length %></span></button>
                        <button class="filter-tab" data-filter="active">Active <span class="filter-count"><%= activeElections.length %></span></button>
                        <button class="filter-tab" data-filter="closed">Closed <span class="filter-count"><%= closedElections.length %></span></button>
                    </div>
                    <div class="filter-search">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></svg>
                        <input type="text" id="electionSearch" placeholder="Search elections...">
                    </div>
                </div>
                
                <div class="table-container">
                    <table class="admin-table" id="electionsTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% elections.forEach(election => { %>
                                <tr data-status="<%= election.status.toLowerCase() %>" data-name="<%= election.name.toLowerCase() %>" data-type="<%= election.electionType.toLowerCase() %>">
                                    <td><strong><%= election.name %></strong></td>
                                    <td><span class="badge"><%- formatElectionType(election.electionType) %></span></td>
                                    <td>
                                        <span class="status-badge status-<%= election.status.toLowerCase() %>">
                                            <%= election.status %>
                                        </span>
                                    </td>
                                    <td><%= new Date(election.startDate).toLocaleDateString() %></td>
                                    <td><%= new Date(election.endDate).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/elections/<%= election.electionID %>" class="btn-icon" title="View Details">
                                            <i data-lucide="eye" style="width: 18px; height: 18px;"></i>
                                        </a>
                                        <a href="/elections/<%= election.electionID %>" class="btn-icon" title="Public View">
                                            <i data-lucide="external-link" style="width: 18px; height: 18px;"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                
                <div class="no-results-message" id="noElectionsMessage" style="display: none;">
                    <i data-lucide="search-x" style="width: 32px; height: 32px;"></i>
                    <p>No elections match your filter.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script src="/public/js/admin.js"></script>
<script src="/public/js/admin-elections.js"></script>

<!-- Create Election Modal -->
<div id="createElectionModal" class="modal-overlay" hidden>
    <div class="modal-content" style="max-width: 600px;">
        <div class="modal-header" style="display: flex; align-items: center; justify-content: space-between; padding: 1.5rem; border-bottom: 1px solid var(--border);">
            <h2 style="margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                <i data-lucide="vote" style="width: 24px; height: 24px;"></i>
                Create New Election
            </h2>
            <button type="button" id="closeModalBtn" class="btn-icon" style="background: none; border: none; cursor: pointer;">
                <i data-lucide="x" style="width: 24px; height: 24px;"></i>
            </button>
        </div>
        <form method="POST" action="/admin/elections" id="createElectionForm">
            <div class="modal-body" style="padding: 1.5rem;">
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label for="electionName" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Election Name *</label>
                    <input type="text" id="electionName" name="name" required class="form-input" placeholder="e.g., 2024 Student Union Elections" style="width: 100%; padding: 0.75rem; border: 1px solid var(--border); border-radius: 6px;">
                </div>
                
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label for="electionType" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Election Type *</label>
                    <select id="electionType" name="electionType" required class="form-input" style="width: 100%; padding: 0.75rem; border: 1px solid var(--border); border-radius: 6px;">
                        <option value="">Select election type...</option>
                        <option value="FPTP">First Past The Post (FPTP)</option>
                        <option value="STV">Single Transferable Vote (STV)</option>
                        <option value="AV">Alternative Vote (AV)</option>
                        <option value="PREFERENTIAL">Preferential Voting</option>
                    </select>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
                    <div class="form-group">
                        <label for="startDate" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Start Date *</label>
                        <input type="datetime-local" id="startDate" name="startDate" required class="form-input" style="width: 100%; padding: 0.75rem; border: 1px solid var(--border); border-radius: 6px;">
                        <div class="date-helpers" style="display: flex; gap: 0.375rem; margin-top: 0.5rem; flex-wrap: wrap;">
                            <button type="button" class="date-helper-btn" data-target="startDate" data-action="now">Now</button>
                            <button type="button" class="date-helper-btn" data-target="startDate" data-action="+1h">+1h</button>
                            <button type="button" class="date-helper-btn" data-target="startDate" data-action="-1h">-1h</button>
                            <button type="button" class="date-helper-btn" data-target="startDate" data-action="+1d">+1 day</button>
                            <button type="button" class="date-helper-btn" data-target="startDate" data-action="-1d">-1 day</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="endDate" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">End Date *</label>
                        <input type="datetime-local" id="endDate" name="endDate" required class="form-input" style="width: 100%; padding: 0.75rem; border: 1px solid var(--border); border-radius: 6px;">
                        <div class="date-helpers" style="display: flex; gap: 0.375rem; margin-top: 0.5rem; flex-wrap: wrap;">
                            <button type="button" class="date-helper-btn" data-target="endDate" data-action="now">Now</button>
                            <button type="button" class="date-helper-btn" data-target="endDate" data-action="+1h">+1h</button>
                            <button type="button" class="date-helper-btn" data-target="endDate" data-action="-1h">-1h</button>
                            <button type="button" class="date-helper-btn" data-target="endDate" data-action="+1d">+1 day</button>
                            <button type="button" class="date-helper-btn" data-target="endDate" data-action="+7d">+1 week</button>
                            <button type="button" class="date-helper-btn" data-target="endDate" data-action="+30d">+1 month</button>
                            <button type="button" class="date-helper-btn" data-target="endDate" data-action="-1d">-1 day</button>
                        </div>
                    </div>
                </div>
                
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label for="description" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Description *</label>
                    <textarea id="description" name="description" required class="form-input" rows="3" placeholder="Brief description of this election..." style="width: 100%; padding: 0.75rem; border: 1px solid var(--border); border-radius: 6px; resize: vertical;"></textarea>
                </div>
                
                <div class="alert alert-info" style="display: flex; align-items: flex-start; gap: 0.75rem; background: #e0f2fe; border: 1px solid #0ea5e9; border-radius: 8px; padding: 1rem;">
                    <i data-lucide="info" style="width: 20px; height: 20px; color: #0369a1;"></i>
                    <div style="color: #0369a1;">
                        <strong>Note:</strong> Elections are created in DRAFT status. You'll be able to add candidates and then activate the election when ready.
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="padding: 1rem 1.5rem; border-top: 1px solid var(--border); display: flex; justify-content: flex-end; gap: 0.75rem;">
                <button type="button" id="cancelModalBtn" class="btn btn-secondary">Cancel</button>
                <button type="submit" class="btn btn-primary">
                    <i data-lucide="plus" style="width: 16px; height: 16px; margin-right: 0.25rem;"></i>
                    Create Election
                </button>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>
